[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    */migrations/*,
    .venv,
    venv,
    */static/*,
    */staticfiles/*,
    check_cicd_status.py,
    test_cicd.sh
ignore = E203, W503, D100, D103, D205, D400, E722, F401, F541, C901, E226, F403, F405
per-file-ignores =
    */__init__.py:F401
max-complexity = 10
