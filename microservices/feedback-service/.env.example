# Django Settings
SECRET_KEY=django-insecure-feedback-service-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,feedback-service

# Database Configuration
DB_NAME=feedback_service_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/5

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/5
