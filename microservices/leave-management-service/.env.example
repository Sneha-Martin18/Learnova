# Django Settings
SECRET_KEY=django-insecure-leave-management-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,leave-management

# Database Configuration
DB_NAME=leave_management_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/4

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/4
